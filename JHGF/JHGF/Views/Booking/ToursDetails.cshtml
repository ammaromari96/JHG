@model JHGF.Models.Tour

@section Styles {
    <link rel="stylesheet" href="~/css/tourdetails.css" />
}

@section Scripts {
    <script src="~/js/tourdetails.js"></script>
}

<style>
    .custom-slide {
        height: 600px;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }

</style>

@* <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> *@


<div class="container">
    <div class="page-header">
        <h1 class="page-title">@Model.TourName</h1>
        <p class="page-subtitle">@Model.SmallDescription</p>
    </div>

    <div id="tourCarousel" class="carousel slide tour-slider" data-bs-ride="carousel">
        <!-- Indicators -->
        <div class="carousel-indicators">
            @{
                int slideIndex = 0;
                if (!string.IsNullOrEmpty(Model.Image1))
                {
                    <button type="button" data-bs-target="#tourCarousel" data-bs-slide-to="@slideIndex" class="@(slideIndex == 0 ? "active" : "")" aria-current="@(slideIndex == 0 ? "true" : "false")" aria-label="Slide 1"></button>
                    ;
                    slideIndex++;
                }
                if (!string.IsNullOrEmpty(Model.Image2))
                {
                    <button type="button" data-bs-target="#tourCarousel" data-bs-slide-to="@slideIndex" aria-label="Slide 2"></button>
                    ;
                    slideIndex++;
                }
                if (!string.IsNullOrEmpty(Model.Image3))
                {
                    <button type="button" data-bs-target="#tourCarousel" data-bs-slide-to="@slideIndex" aria-label="Slide 3"></button>
                    ;
                    slideIndex++;
                }
                if (!string.IsNullOrEmpty(Model.Image4))
                {
                    <button type="button" data-bs-target="#tourCarousel" data-bs-slide-to="@slideIndex" aria-label="Slide 4"></button>
                    ;
                }
            }
        </div>

        <!-- Slides -->
        <div class="carousel-inner">
            @{
                int index = 0;
                if (!string.IsNullOrEmpty(Model.Image1))
                {
                    <div class="carousel-item @(index == 0 ? "active" : "")">
                        <div class="d-block w-100 custom-slide" style="background-image: url('@Model.Image1');"></div>
                    </div>
                    index++;
                }
                if (!string.IsNullOrEmpty(Model.Image2))
                {
                    <div class="carousel-item @(index == 0 ? "active" : "")">
                        <div class="d-block w-100 custom-slide" style="background-image: url('@Model.Image2');"></div>
                    </div>
                    index++;
                }
                if (!string.IsNullOrEmpty(Model.Image3))
                {
                    <div class="carousel-item @(index == 0 ? "active" : "")">
                        <div class="d-block w-100 custom-slide" style="background-image: url('@Model.Image3');"></div>
                    </div>
                    index++;
                }
                if (!string.IsNullOrEmpty(Model.Image4))
                {
                    <div class="carousel-item @(index == 0 ? "active" : "")">
                        <div class="d-block w-100 custom-slide" style="background-image: url('@Model.Image4');"></div>
                    </div>
                }
            }
        </div>

        <!-- Navigation buttons -->
        <button class="carousel-control-prev" type="button" data-bs-target="#tourCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#tourCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>


    <!-- Tour Info -->
    <div class="tour-info">
        <div class="tour-description">
            <h2 class="tour-name">@Model.TourName</h2>
            <p class="tour-text">@Model.FullDescription</p>
            <div class="tour-price">
                $@Model.Price <span>per person</span>
            </div>


            <!-- Tour Highlights -->
            <div class="tour-highlights mt-4">
                <h3 class="highlights-title">Tour Highlights</h3>
                <ul class="highlights-list">
                    <li class="highlight-item"><i class="fas fa-check-circle"></i> Round-trip transportation from Amman</li>
                    <li class="highlight-item"><i class="fas fa-check-circle"></i> Entrance fees included</li>
                    <li class="highlight-item"><i class="fas fa-check-circle"></i> Professional English-speaking guide</li>
                    <li class="highlight-item"><i class="fas fa-check-circle"></i> Buffet lunch with local cuisine</li>
                    <li class="highlight-item"><i class="fas fa-check-circle"></i> Small group experience</li>
                    <li class="highlight-item"><i class="fas fa-check-circle"></i> Free time for exploration & photos</li>
                    <li class="highlight-item"><i class="fas fa-check-circle"></i> Learn the rich history of the site</li>
                    <li class="highlight-item"><i class="fas fa-check-circle"></i> Air-conditioned vehicle</li>
                    <li class="highlight-item"><i class="fas fa-check-circle"></i> Flexible cancellation policy</li>
                    <li class="highlight-item"><i class="fas fa-check-circle"></i> Instant confirmation & 24/7 support</li>
                </ul>
            </div>
            </div>


        <!-- Booking Section -->
        <div class="booking-section">
            <h3 class="booking-title">Book This Tour</h3>
            <form asp-action="BookTour" asp-controller="Booking" method="post">
                <input type="hidden" name="TourId" value="@Model.Id" />

                <div class="booking-form-group">
                    <label class="booking-label">Tour Date</label>
                    <input type="date" class="booking-input" name="TourDate" required>
                </div>

                <div class="booking-form-row">
                    <div class="booking-form-col">
                        <div class="booking-form-group">
                            <label class="booking-label">Adults</label>
                            <select class="booking-select" name="NumberOfAdults" required>
                                <option value="1">1 Adult</option>
                                <option value="2" selected>2 Adults</option>
                                <option value="3">3 Adults</option>
                                <option value="4">4 Adults</option>
                                <option value="5">5 Adults</option>
                                <option value="6">6 Adults</option>
                            </select>
                        </div>
                    </div>
                    <div class="booking-form-col">
                        <div class="booking-form-group">
                            <label class="booking-label">Children</label>
                            <select class="booking-select" name="NumberOfChildren">
                                <option value="0">0 Children</option>
                                <option value="1">1 Child</option>
                                <option value="2">2 Children</option>
                                <option value="3">3 Children</option>
                            </select>
                        </div>
                    </div>
                </div>

                <div class="payment-section">
                    <h4 class="payment-title">Payment Method</h4>
                    <div class="payment-method active">
                        <i class="fab fa-cc-visa"></i>
                        <span>Credit/Debit Card</span>
                    </div>

                    <div class="payment-details">
                        <div class="booking-form-group">
                            <label class="booking-label">Card Number</label>
                            <input type="text" class="booking-input" placeholder="1234 5678 9012 3456" required>
                        </div>

                        <div class="booking-form-row">
                            <div class="booking-form-col">
                                <div class="booking-form-group">
                                    <label class="booking-label">Expiration Date</label>
                                    <input type="text" class="booking-input" placeholder="MM/YY" required>
                                </div>
                            </div>
                            <div class="booking-form-col">
                                <div class="booking-form-group">
                                    <label class="booking-label">CVV</label>
                                    <input type="text" class="booking-input" placeholder="123" required>
                                </div>
                            </div>
                        </div>

                        <div class="booking-form-group">
                            <label class="booking-label">Cardholder Name</label>
                            <input type="text" class="booking-input" placeholder="John Doe" required>
                        </div>
                    </div>
                </div>

                <button type="submit" class="book-now-btn">Book Now</button>
            </form>
        </div>
    </div>

    <!-- Itinerary Section -->
    <div class="itinerary-section">
        <h2 class="section-title">Tour Itinerary</h2>

        @for (int i = 1; i <= 8; i++)
        {
            var timeProp = typeof(JHGF.Models.Tour).GetProperty($"ItineraryTime{i}")?.GetValue(Model)?.ToString();
            var titleProp = typeof(JHGF.Models.Tour).GetProperty($"ItineraryTitle{i}")?.GetValue(Model)?.ToString();
            var descProp = typeof(JHGF.Models.Tour).GetProperty($"ItineraryDesc{i}")?.GetValue(Model)?.ToString();

            if (!string.IsNullOrEmpty(timeProp) && !string.IsNullOrEmpty(titleProp) && !string.IsNullOrEmpty(descProp))
            {
                <div class="itinerary-item">
                    <div class="itinerary-time">@timeProp</div>
                    <div class="itinerary-content">
                        <h3 class="itinerary-title">@titleProp</h3>
                        <p class="itinerary-description">@descProp</p>
                    </div>
                </div>
            }
        }
    </div>

    <!-- Reviews Section -->
    <div class="reviews-section">
        <h2 class="section-title">Customer Reviews</h2>

        @if (Model.Reviews != null && Model.Reviews.Any())
        {
            foreach (var review in Model.Reviews)
            {
                <div class="review-item">
                    <div class="review-header">
                        <span class="review-author">@review.UserName</span>
                    </div>
                    <div class="review-stars">
                        @for (int i = 0; i < review.Rating; i++)
                        {
                            <i class="fas fa-star"></i>
                        }
                    </div>
                    <p class="review-content">@review.Comment</p>
                </div>
            }
        }
        else
        {
            <p style="color: #777;">No reviews yet. Be the first to write one!</p>
        }
    </div>

    <!-- Review Form -->
    @if (Context.Session.GetString("UserId") != null)
    {
        <div class="review-form">
            <h2 class="form-title">Write a Review</h2>

            <form asp-action="SubmitTourReview" asp-controller="Booking" method="post">
                <input type="hidden" name="TourId" value="@Model.Id" />

                <div class="form-group">
                    <label class="form-label">Rating</label>
                    <select class="form-select" name="Rating" required>
                        <option value="">Select Rating</option>
                        <option value="1">1 Star</option>
                        <option value="2">2 Stars</option>
                        <option value="3">3 Stars</option>
                        <option value="4">4 Stars</option>
                        <option value="5">5 Stars</option>
                    </select>
                </div>

                <div class="form-group">
                    <label class="form-label">Your Review</label>
                    <textarea class="form-textarea" name="Comment" required></textarea>
                </div>

                <button type="submit" class="submit-review-btn">Submit Review</button>
            </form>
        </div>
    }
    </div>