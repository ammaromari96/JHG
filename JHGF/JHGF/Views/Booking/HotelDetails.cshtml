@model JHGF.Models.Hotel

@section Styles {
    <link rel="stylesheet" href="~/css/hoteldetails.css" />
}

@section Scripts {
    <script src="~/js/hoteldetails.js"></script>
}


<style>
    .review-form {
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        padding: 30px;
        margin-bottom: 40px;
        margin-top: 40px;
    }

    .custom-slide {
        height: 600px;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
    }
</style>


<div class="container">
    <div class="page-header">
        <h1 class="page-title">@Model.HotelName</h1>
        <p class="page-subtitle">@Model.SmallDescription</p>
    </div>

    <div id="hotelCarousel" class="carousel slide hotel-slider" data-bs-ride="carousel">
        <!-- Indicators -->
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#hotelCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#hotelCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#hotelCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
            <button type="button" data-bs-target="#hotelCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
        </div>

        <!-- Slides -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="d-block w-100 custom-slide" style="background-image: url('@Model.HotelImage1');"></div>
            </div>
            <div class="carousel-item">
                <div class="d-block w-100 custom-slide" style="background-image: url('@Model.HotelImage2');"></div>
            </div>
            <div class="carousel-item">
                <div class="d-block w-100 custom-slide" style="background-image: url('@Model.HotelImage3');"></div>
            </div>
            <div class="carousel-item">
                <div class="d-block w-100 custom-slide" style="background-image: url('@Model.HotelImage4');"></div>
            </div>
        </div>

        <!-- Navigation buttons -->
        <button class="carousel-control-prev" type="button" data-bs-target="#hotelCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#hotelCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>


    <div class="hotel-info">
        <div class="hotel-description">
            <h2 class="hotel-name">@Model.HotelName</h2>
            <div class="hotel-location">
                <i class="fas fa-map-marker-alt"></i> @Model.Location
            </div>
            <p class="hotel-text">@Model.FullDescription</p>

            <div class="hotel-highlights">
                <h3 class="highlight-title">Hotel Highlights</h3>
                <ul class="highlight-list">
                    <li class="highlight-item"><i class="fas fa-check-circle"></i> Free WiFi</li>
                    <li class="highlight-item"><i class="fas fa-check-circle"></i> Free Parking</li>
                    <li class="highlight-item"><i class="fas fa-check-circle"></i> Rooftop View</li>
                    <li class="highlight-item"><i class="fas fa-check-circle"></i> Family Friendly</li>
                </ul>
            </div>
        </div>

        <div class="quick-facts">
            <h3 class="facts-title">Quick Facts</h3>
            <div class="fact-item">
                <span class="fact-label">Rating:</span>
                <span class="fact-value"><i class="fas fa-star" style="color: #ffc107;"></i> @Model.Rating.0 (based on reviews)</span>
            </div>
            <div class="fact-item">
                <span class="fact-label">Check-in:</span>
                <span class="fact-value">@Model.CheckInTime?.ToString("hh:mm tt")</span>
            </div>
            <div class="fact-item">
                <span class="fact-label">Check-out:</span>
                <span class="fact-value">@Model.CheckOutTime?.ToString("hh:mm tt")</span>
            </div>
            <div class="fact-item">
                <span class="fact-label">Distance from city:</span>
                <span class="fact-value">@Model.DistanceFromCity km</span>
            </div>
            <div class="fact-item">
                <span class="fact-label">Free WiFi:</span>
                <span class="fact-value">@(Model.FreeWifi == true ? "Yes" : "No")</span>
            </div>
            <div class="fact-item">
                <span class="fact-label">Parking:</span>
                <span class="fact-value">@(Model.ParkingAvailable == true ? "Available" : "Not Available")</span>
            </div>

            <a asp-controller="Booking" asp-action="HotelPayment" asp-route-id="@Model.Id" class="book-now-btn">Book Now</a>

        </div>
    </div>

    <div class="amenities-section">
        <h2 class="section-title">Amenities</h2>
        <div class="amenities-grid">
            <div class="amenity-item">
                <i class="fas fa-swimming-pool"></i>
                <span>Outdoor Pool</span>
            </div>
            <div class="amenity-item">
                <i class="fas fa-spa"></i>
                <span>Spa & Wellness</span>
            </div>
            <div class="amenity-item">
                <i class="fas fa-wifi"></i>
                <span>Free WiFi</span>
            </div>
            <div class="amenity-item">
                <i class="fas fa-utensils"></i>
                <span>Restaurants</span>
            </div>
            <div class="amenity-item">
                <i class="fas fa-dumbbell"></i>
                <span>Fitness Center</span>
            </div>
            <div class="amenity-item">
                <i class="fas fa-concierge-bell"></i>
                <span>Room Service</span>
            </div>
            <div class="amenity-item">
                <i class="fas fa-parking"></i>
                <span>Free Parking</span>
            </div>
            <div class="amenity-item">
                <i class="fas fa-snowflake"></i>
                <span>Air Conditioning</span>
            </div>
            <div class="amenity-item">
                <i class="fas fa-coffee"></i>
                <span>Breakfast Included</span>
            </div>
            <div class="amenity-item">
                <i class="fas fa-business-time"></i>
                <span>Business Center</span>
            </div>
            <div class="amenity-item">
                <i class="fas fa-child"></i>
                <span>Kids Activities</span>
            </div>
            <div class="amenity-item">
                <i class="fas fa-wheelchair"></i>
                <span>Accessible</span>
            </div>
        </div>
    </div>

    <div class="reviews-section">
        <h2 class="section-title">Customer Reviews</h2>

        @if (ViewBag.Reviews != null && ViewBag.Reviews.Count > 0)
        {
            foreach (var review in ViewBag.Reviews)
            {
                <div class="review-card">
                    <div class="review-header">
                        <span class="reviewer">@review.UserName</span>
                    </div>
                    <div class="review-rating">
                        @for (int i = 0; i < review.Rating; i++)
                        {
                            <i class="fas fa-star"></i>
                        }
                    </div>
                    <p class="review-text">@review.Comment</p>
                </div>
            }
        }
        else
        {
            <p>No reviews yet. Be the first to write one!</p>
        }
    </div>

    <div class="review-form">
        <h2 class="section-title">Write a Review</h2>

        <form asp-action="SubmitHotelReview" method="post">
            <input type="hidden" name="HotelId" value="@Model.Id" />

            <div class="form-group">
                <label class="form-label">Rating</label>
                <select name="Rating" class="form-control" required>
                    <option value="">Select Rating</option>
                    @for (int i = 1; i <= 5; i++)
                    {
                        <option value="@i">@i Star(s)</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label class="form-label">Your Review</label>
                <textarea name="Comment" class="form-textarea" required></textarea>
            </div>

            <button type="submit" class="submit-review-btn">Submit Review</button>
        </form>
    </div>
</div>




















