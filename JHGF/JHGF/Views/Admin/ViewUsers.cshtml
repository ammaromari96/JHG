@model List<JHGF.Models.User>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "View Users";
}

<div class="content-header">
    <div>
        <h1 class="content-title">User Management</h1>
        <p class="content-subtitle">View and manage all users in the system</p>
    </div>
</div>

<div class="alert alert-success" id="userSuccessAlert" style="display: none;">
    <i class="fas fa-check-circle"></i>
    <span id="userSuccessText">User deleted successfully!</span>
</div>

<div class="data-table-container">
    <table class="data-table table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.Name</td>
                    <td>@user.Email</td>
                    <td>@user.Phone</td>
                    <td>@user.Role</td>
                    <td>
                        <form asp-action="DeleteUser" asp-controller="Admin" asp-route-id="@user.Id" method="post" style="display:inline;">
                            <button class="btn btn-danger" style="padding: 5px 8px;" onclick="return confirm('Are you sure you want to delete this user?');">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
