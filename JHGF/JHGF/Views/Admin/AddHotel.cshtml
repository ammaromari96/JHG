@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Add Hotel";
}

<div class="content-header">
    <div>
        <h1 class="content-title">Add New Hotel</h1>
        <p class="content-subtitle">Fill in the details to add a new hotel</p>
    </div>
</div>

<div class="alert alert-success" id="addHotelSuccessAlert" style="display: none;">
    <i class="fas fa-check-circle"></i>
    <span id="addHotelSuccessText">Hotel added successfully!</span>
</div>

<div class="form-container">
    <div class="form-header">
        <h3>Hotel Information</h3>
    </div>

    <form asp-action="AddHotel" asp-controller="Admin" method="post" enctype="multipart/form-data">
        <div class="form-body">
            <div class="form-group">
                <label for="hotelName">Hotel Name</label>
                <input type="text" id="hotelName" name="HotelName" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="hotelLocation">Location</label>
                <input type="text" id="hotelLocation" name="Location" class="form-control" required />
            </div>

            <div class="form-group">
                <label for="hotelPrice">Starting Price ($)</label>
                <input type="number" id="hotelPrice" name="Price" class="form-control" min="0" step="0.01" required />
            </div>

            <div class="form-group">
                <label for="hotelRating">Rating (1-5)</label>
                <input type="number" id="hotelRating" name="Rating" class="form-control" min="1" max="5" required />
            </div>

            <div class="form-group">
                <label for="distanceFromCity">Distance from City Center (km)</label>
                <input type="number" id="distanceFromCity" name="DistanceFromCity" class="form-control" min="0" step="0.1" />
            </div>

            <div class="form-group">
                <label for="checkInTime">Check-in Time</label>
                <input type="time" id="checkInTime" name="CheckInTime" class="form-control" value="14:00" />
            </div>

            <div class="form-group">
                <label for="checkOutTime">Check-out Time</label>
                <input type="time" id="checkOutTime" name="CheckOutTime" class="form-control" value="12:00" />
            </div>

            <div class="form-group full-width">
                <label for="smallDescription">Short Description</label>
                <textarea id="smallDescription" name="SmallDescription" class="form-control" required></textarea>
            </div>

            <div class="form-group full-width">
                <label for="fullDescription">Full Description</label>
                <textarea id="fullDescription" name="FullDescription" class="form-control" required></textarea>
            </div>

            <!-- Amenities -->
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="freeWifi" name="FreeWifi" />
                    <label class="form-check-label" for="freeWifi">Free WiFi</label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="parkingAvailable" name="ParkingAvailable" />
                    <label class="form-check-label" for="parkingAvailable">Parking Available</label>
                </div>
            </div>

            <!-- Hotel Images -->
            <div class="form-group">
                <label>Hotel Images (Upload at least one image)</label>
                <div class="row">
                    <div class="col-md-3">
                        <input type="file" id="hotelImage1" name="HotelImage1" class="form-control mb-2" accept="image/*" required />
                    </div>
                    <div class="col-md-3">
                        <input type="file" id="hotelImage2" name="HotelImage2" class="form-control mb-2" accept="image/*" />
                    </div>
                    <div class="col-md-3">
                        <input type="file" id="hotelImage3" name="HotelImage3" class="form-control mb-2" accept="image/*" />
                    </div>
                    <div class="col-md-3">
                        <input type="file" id="hotelImage4" name="HotelImage4" class="form-control mb-2" accept="image/*" />
                    </div>
                </div>
            </div>

            <!-- Submit -->
            <div class="form-footer">
                <a asp-action="ViewHotels" asp-controller="Admin" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-primary">Add Hotel</button>
            </div>
        </div>
    </form>
</div>
