@model List<JHGF.Models.Hotel>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "View Hotels";
}

<div class="content-header">
    <div>
        <h1 class="content-title">Hotel Management</h1>
        <p class="content-subtitle">View and manage all hotels in the system</p>
    </div>
    <a asp-action="AddHotel" asp-controller="Admin" class="btn btn-primary">
        <i class="fas fa-plus"></i> Add Hotel
    </a>
</div>

<div class="alert alert-success" id="hotelSuccessAlert" style="display: none;">
    <i class="fas fa-check-circle"></i>
    <span id="hotelSuccessText">Hotel deleted successfully!</span>
</div>

<div class="data-table-container">
    <table class="data-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Hotel Name</th>
                <th>Location</th>
                <th>Price/Night</th>
                <th>Rating</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var hotel in Model)
            {
                <tr>
                    <td>@hotel.Id</td>
                    <td>@hotel.HotelName</td>
                    <td>@hotel.Location</td>
                    <td>@hotel.Price</td>
                    <td>
                        @hotel.Rating <i class="fas fa-star" style="color: gold;"></i>
                    </td>
                    <td>
                        <a asp-action="EditHotel" asp-controller="Admin" asp-route-id="@hotel.Id" class="btn btn-secondary" style="padding: 5px 8px;">
                            <i class="fas fa-edit"></i>
                        </a>
                        <form asp-action="DeleteHotel" asp-controller="Admin" asp-route-id="@hotel.Id" method="post" style="display:inline;">
                            <button class="btn btn-danger" style="padding: 5px 8px;" onclick="return confirm('Are you sure you want to delete this hotel?');">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
