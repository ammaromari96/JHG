@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="content-header">
    <div>
        <h1 class="content-title">Admin Dashboard</h1>
        <p class="content-subtitle">Welcome back, Admin! Here's an overview of your system.</p>
    </div>
</div>

<!-- Dashboard Cards -->
<div class="dashboard-cards">
    <div class="dashboard-card">
        <div class="card-icon">
            <i class="fas fa-hotel"></i>
        </div>
        <div class="card-content">
            <div class="card-title">Total Hotels</div>
            <div class="card-value">24</div>
        </div>
    </div>

    <div class="dashboard-card">
        <div class="card-icon">
            <i class="fas fa-route"></i>
        </div>
        <div class="card-content">
            <div class="card-title">Total Tours</div>
            <div class="card-value">18</div>
        </div>
    </div>

    <div class="dashboard-card">
        <div class="card-icon">
            <i class="fas fa-suitcase"></i>
        </div>
        <div class="card-content">
            <div class="card-title">Total Packages</div>
            <div class="card-value">12</div>
        </div>
    </div>

    <div class="dashboard-card">
        <div class="card-icon">
            <i class="fas fa-users"></i>
        </div>
        <div class="card-content">
            <div class="card-title">Total Users</div>
            <div class="card-value">156</div>
        </div>
    </div>

    <div class="dashboard-card">
        <div class="card-icon">
            <i class="fas fa-envelope"></i>
        </div>
        <div class="card-content">
            <div class="card-title">New Messages</div>
            <div class="card-value">5</div>
        </div>
    </div>

    <div class="dashboard-card">
        <div class="card-icon">
            <i class="fas fa-calendar-check"></i>
        </div>
        <div class="card-content">
            <div class="card-title">Bookings Today</div>
            <div class="card-value">8</div>
        </div>
    </div>
</div>

