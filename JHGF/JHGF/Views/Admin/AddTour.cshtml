            </div>

            <!-- Itinerary Item 8 -->
            <div class="itinerary-item">
                <h5>Itinerary Item 8</h5>
                <div class="form-group">
                    <label for="itineraryTime8">Time</label>
                    <input type="text" id="itineraryTime8" name="ItineraryTime8" class="form-control">
                </div>
                <div class="form-group">
                    <label for="itineraryTitle8">Title</label>
                    <input type="text" id="itineraryTitle8" name="ItineraryTitle8" class="form-control">
                </div>
                <div class="form-group">
                    <label for="itineraryDesc8">Description</label>
                    <textarea id="itineraryDesc8" name="ItineraryDesc8" class="form-control"></textarea>
                </div>
            </div>
        </div>

        <div class="form-footer">
            <a asp-action="ViewTours" asp-controller="Admin" class="btn btn-secondary">Cancel</a>
            <button type="submit" class="btn btn-primary">Add Tour</button>
        </div>
    </form>
</div>