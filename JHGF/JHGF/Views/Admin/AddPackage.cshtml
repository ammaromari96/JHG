@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Add Package";
}

<div class="content-header">
    <div>
        <h1 class="content-title">Add New Package</h1>
        <p class="content-subtitle">Fill in the details to add a new travel package</p>
    </div>
</div>

<div class="alert alert-success" id="addPackageSuccessAlert" style="display: none;">
    <i class="fas fa-check-circle"></i>
    <span id="addPackageSuccessText">Package added successfully!</span>
</div>

<div class="form-container">
    <div class="form-header">
        <h3>Package Information</h3>
    </div>

    <form id="addPackageForm" enctype="multipart/form-data" method="post">
        <div class="form-body">
            <!-- Basic Information -->
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="packageName">Package Name</label>
                    <input type="text" id="packageName" name="PackageName" class="form-control" required />
                </div>

                <div class="form-group col-md-6">
                    <label for="packageLocation">Location</label>
                    <input type="text" id="packageLocation" name="Location" class="form-control" required />
                </div>
            </div>

            <div class="form-row">
                <div class="form-group col-md-3">
                    <label for="packageDuration">Duration (Days)</label>
                    <input type="number" id="packageDuration" name="DurationDays" class="form-control" min="1" required />
                </div>

                <div class="form-group col-md-3">
                    <label for="packagePrice">Price ($)</label>
                    <input type="number" id="packagePrice" name="Price" class="form-control" min="0" step="0.01" required />
                </div>
            </div>

            <!-- Descriptions -->
            <div class="form-group">
                <label for="smallDescription">Small Description (Summary)</label>
                <textarea id="smallDescription" name="SmallDescription" class="form-control" maxlength="200" required></textarea>
                <small class="text-muted">Brief summary (max 200 characters)</small>
            </div>

            <div class="form-group full-width">
                <label for="fullDescription">Full Description</label>
                <textarea id="fullDescription" name="FullDescription" class="form-control" rows="5" required></textarea>
            </div>

            <!-- Itinerary Sections -->
            <div class="itinerary-section">
                <h4 class="section-title">Itinerary Details</h4>
                <p class="section-subtitle">Fill in the daily schedule (up to 8 items)</p>

                <!-- Itinerary Item 1 -->
                <div class="itinerary-item card mb-3">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Itinerary Item 1</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label for="itineraryTime1">Time</label>
                                <input type="text" id="itineraryTime1" name="ItineraryTime1" class="form-control" placeholder="e.g. 08:00 AM" />
                            </div>
                            <div class="form-group col-md-9">
                                <label for="itineraryTitle1">Title</label>
                                <input type="text" id="itineraryTitle1" name="ItineraryTitle1" class="form-control" placeholder="Activity title" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="itineraryDesc1">Description</label>
                            <textarea id="itineraryDesc1" name="ItineraryDesc1" class="form-control" rows="2"></textarea>
                        </div>
                    </div>
                </div>

