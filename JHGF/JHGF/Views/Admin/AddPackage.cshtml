            <!-- Image Uploads -->
            <div class="images-section mt-4">
                <h4 class="section-title">Package Images</h4>
                <p class="section-subtitle">Upload images for the package (Main image is required)</p>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="image1">Main Image (Required)</label>
                        <input type="file" id="image1" name="Image1" class="form-control" accept="image/*" required />
                        <small class="text-muted">This will be the primary display image</small>
                    </div>

                    <div class="form-group col-md-6">
                        <label for="image2">Secondary Image 1</label>
                        <input type="file" id="image2" name="Image2" class="form-control" accept="image/*" />
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label for="image3">Secondary Image 2</label>
                        <input type="file" id="image3" name="Image3" class="form-control" accept="image/*" />
