@{
    ViewData["Title"] = "Home Page";
}

@section Styles {
    <link rel="stylesheet" href="~/css/index.css"  />
}

<!-- Inject specific JS for this page -->
@section Scripts {
    <script src="~/js/index.js"></script>
}

<style>
    .jnav-links{
        color: #fff !important;
    }

    .section-title {
        font-size: 1.8rem !important;
        margin-bottom: 20px !important;
        position: relative !important;
        padding-bottom: 10px !important;
        color: black !important;



    }

    .hero {
        position: relative;
        height: 100vh;
        min-height: 700px;
        background: url('https://lp-cms-production.imgix.net/2024-09/ma-in-hot-springs-jordan-a6f409287fb9.jpg?auto=format,compress&q=72&fit=crop') no-repeat center center/cover;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        color: white;
        padding: 0 20px;
    }

</style>


<!-- Hero Section -->
<section class="hero">
    <div class="hero-overlay"></div>
    <div class="hero-content">
        <div class="hero-text">
            <h1>Discover Jordan's Hidden Gems</h1>
            <p>Explore the untouched beauty beyond the well-trodden paths</p>
            <div class="hero-buttons">
                <a href="#explore" class="btn btn-primary">Explore Now</a>
                <a href="#about" class="btn btn-secondary">Learn More</a>
            </div>
        </div>

        <!-- Image Cards Container -->
        <div class="image-cards">
            <!-- Hotel Card -->
            <a asp-controller="Booking" asp-action="Hotel" class="image-card">
                <img src="https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" alt="Luxury Hotel in Jordan">
                <div class="image-card-overlay">
                    <h3 class="image-card-title">Hotels</h3>
                    <p class="image-card-desc">Find your perfect stay in Jordan</p>
                </div>
            </a>

            <!-- Tour Card -->
            <a asp-controller="Booking" asp-action="Tours" class="image-card">
                <img src="https://images.unsplash.com/photo-1527631746610-bca00a040d60?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" alt="Jordan Tour">
                <div class="image-card-overlay">
                    <h3 class="image-card-title">Tours</h3>
                    <p class="image-card-desc">Explore Jordan's hidden treasures</p>
                </div>
            </a>

            <!-- Package Card -->
            <a asp-controller="Booking" asp-action="Packages" class="image-card">
                <img src="https://images.unsplash.com/photo-1520250497591-112f2f40a3f4?ixlib=rb-1.2.1&auto=format&fit=crop&w=1350&q=80" alt="Travel Package">
                <div class="image-card-overlay">
                    <h3 class="image-card-title">Packages</h3>
                    <p class="image-card-desc">All-inclusive Jordan experiences</p>
                </div>
            </a>
        </div>
    </div>

    
</section>





<!-- Our Services - Simplified Version -->
<section class="bg-grey" id="services">
    <div class="container">
        <div class="section-title text-center">
            <h2 style="color:black">Our <span>Services</span></h2>
            <p>Discover Jordan with our expertly curated travel services for an unforgettable experience.</p>
        </div>

        <!-- Simplified Filter Buttons -->
        <div class="service-filter">
            <button class="filter-btn active" data-filter="all">All Services</button>
            <button class="filter-btn" data-filter="accommodation">Hotels</button>
            <button class="filter-btn" data-filter="tours">Tours</button>
            <button class="filter-btn" data-filter="packages">Packages</button>
        </div>

        <div class="services-grid">
            <!-- Hotel Booking -->
            <div class="service-card" data-category="accommodation">
                <div class="service-image">
                    <img src="https://images.unsplash.com/photo-1566073771259-6a8506099945?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80" alt="Luxury Hotel">
                    <div class="service-badge">Best Value</div>
                </div>
                <div class="service-content">
                    <h3>Hotel Booking</h3>
                    <p>From luxury resorts to boutique hotels, we'll find your perfect accommodation in Jordan.</p>
                    <div class="service-features">
                        <span><i class="fas fa-check-circle"></i> Best Price Guarantee</span>
                        <span><i class="fas fa-check-circle"></i> 500+ Properties</span>
                        <span><i class="fas fa-check-circle"></i> Instant Confirmation</span>
                    </div>
                    <div class="service-footer">
                        <p class="price">From 50 JOD/night</p>
                        <a asp-controller="Booking" asp-action="Hotel" class="biz-btn">Book Now</a>
                    </div>
                </div>
            </div>

            <!-- Guided Tours -->
            <div class="service-card" data-category="tours">
                <div class="service-image">
                    <img src="https://images.unsplash.com/photo-1520250497591-112f2f40a3f4?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80" alt="Petra Tour">
                    <div class="service-badge">Bestseller</div>
                </div>
                <div class="service-content">
                    <h3>Guided Tours</h3>
                    <p>Explore Petra, Wadi Rum, and more with our expert local guides.</p>
                    <div class="service-features">
                        <span><i class="fas fa-check-circle"></i> Small Groups</span>
                        <span><i class="fas fa-check-circle"></i> Skip-the-Line Access</span>
                        <span><i class="fas fa-check-circle"></i> Licensed Guides</span>
                    </div>
                    <div class="service-footer">
                        <p class="price">From 99 JOD/person</p>
                        <a asp-controller="Booking" asp-action="Tours" class="biz-btn">View Tours</a>
                    </div>
                </div>
            </div>

            <!-- Custom Packages -->
            <div class="service-card" data-category="packages">
                <div class="service-image">
                    <img src="https://images.unsplash.com/photo-1506929562872-bb421503ef21?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80" alt="Custom Itinerary">
                    <div class="service-badge">Tailor-Made</div>
                </div>
                <div class="service-content">
                    <h3>Custom Packages</h3>
                    <p>Personalized itineraries combining hotels, tours, and activities.</p>
                    <div class="service-features">
                        <span><i class="fas fa-check-circle"></i> Flexible Dates</span>
                        <span><i class="fas fa-check-circle"></i> Dedicated Planner</span>
                        <span><i class="fas fa-check-circle"></i> 24/7 Support</span>
                    </div>
                    <div class="service-footer">
                        <p class="price">Custom Pricing</p>
                        <a asp-controller="Booking" asp-action="Packages" class="biz-btn">Plan Now</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mar-top-30">
            <a asp-controller="Home" asp-action="contactus" class="biz-btn biz-btn1">Contact Us <i class="fas fa-arrow-right"></i></a>
        </div>
    </div>
</section>

<!-- secend Section end -->
@{
    var tours = ViewBag.Tours as List<JHGF.Models.Tour>;
}

<!-- Popular Destinations Section -->
<section id="destinations" class="section-padding">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Discover <span>Jordan's Treasures</span></h2>
            <p class="section-subtitle">Journey through timeless landscapes where ancient wonders meet breathtaking natural beauty</p>
            <div class="section-divider">
                <span class="divider-line"></span>
                <i class="fas fa-compass divider-icon"></i>
                <span class="divider-line"></span>
            </div>
        </div>

        <div class="destinations-grid">
            @if (tours != null && tours.Any())
            {
                foreach (var tour in tours.Take(6))
                {
                    <div class="destination-card">
                        <div class="card-media">
                            <div class="media-wrapper">
                                <img src="@(tour.Image1 ?? "/images/placeholder.jpg")"
                                     alt="@tour.TourName"
                                     loading="lazy"
                                     class="destination-image">
                                <div class="media-overlay"></div>
                                <div class="destination-badge">
</div>
                                <div class="rating-badge">
                                    <i class="fas fa-star"></i> 4.5
                                </div>
                            </div>
                            <div class="card-duration">
                                <i class="far fa-clock"></i> @((tour.DurationDays.HasValue ? tour.DurationDays.Value.ToString() : "1"))

                            </div>
                        </div>

                        <div class="card-content">
                            <div class="destination-meta">
                                <span class="meta-location"><i class="fas fa-map-marker-alt"></i> @tour.Location</span>
                                <span class="meta-price">From @tour.Price</span>
                            </div>

                            <h3 class="destination-title">@tour.TourName</h3>

                            <p class="destination-excerpt">
                                @tour.SmallDescription
                            </p>

                            <div class="card-footer">
                                <a asp-controller="Booking" asp-action="ToursDetails" asp-route-id="@tour.Id" class="cta-button">
                                    <span>View Details</span>
                                    <i class="fas fa-chevron-right"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted text-center">No tours available right now.</p>
            }
        </div>

        <div class="section-cta">
            <a asp-controller="Booking" asp-action="Tours" class="primary-button">
                View All Tours
                <i class="fas fa-arrow-right"></i>
            </a>
        </div>
    </div>
</section>



<!-- third Section end -->
<!-- Testimonials Section -->
@{
    var testimonials = ViewBag.Testimonials as List<JHGF.Models.Testimonial>;
}
<!-- Testimonials Section -->
<section id="testimonials" class="section-padding bg-gray">
    <div class="container">
        <div class="section-header">
            <h2 class="section-title">Traveler <span>Testimonials</span></h2>
            <p class="section-subtitle">Hear what our guests say about their Jordanian adventures</p>
            <div class="section-divider">
                <span class="divider-line"></span>
                <i class="fas fa-quote-right divider-icon"></i>
                <span class="divider-line"></span>
            </div>
        </div>

        <div class="testimonials-container">
            <div class="slider-arrows">
                <div class="arrow prev" style="margin-left: -5%;" onclick="moveSlide(-1)">
                    <i class="fas fa-chevron-left"></i>
                </div>
                <div class="arrow next" style="margin-right: -5%;" onclick="moveSlide(1)">
                    <i class="fas fa-chevron-right"></i>
                </div>
            </div>

            <div class="testimonials-slider" id="slider">
                @if (testimonials != null && testimonials.Any())
                {
                    foreach (var testimonial in testimonials)
                    {
                        <div class="testimonial-card animate-fade">
                            <div class="testimonial-content">
                                <p class="testimonial-text">@testimonial.Message</p>
                                <div class="testimonial-author">
                                   
                                    <div class="author-info">
                                        <h4>@testimonial.UserName</h4>
                                        <p>@testimonial.Location</p>
                                        <div class="rating">
                                            @for (int i = 1; i <= testimonial.Rating; i++)
                                            {
                                                <i class="fas fa-star"></i>
                                            }
                                            @for (int i = testimonial.Rating + 1 ?? 1; i <= 5; i++)
                                            {
                                                <i class="far fa-star"></i>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-center">No testimonials available yet.</p>
                }
            </div>

            <div class="slider-nav">
                <span class="slider-dot active" onclick="goToSlide(0)"></span>
                <span class="slider-dot" onclick="goToSlide(1)"></span>
                <span class="slider-dot" onclick="goToSlide(2)"></span>
            </div>
            

        </div>
    </div>
    <div class="text-center mt-4" style="margin-top: 2%;">
        <a asp-action="AddTestimonial" asp-controller="Home" class="btn btn-primary px-4 py-2">
            <i class="fas fa-plus-circle"></i> Add Your Testimonial
        </a>
    </div>
</section>



<!-- fourth Section end -->



