@{
    var profilePic = Context.Session.GetString("ProfilePic");
    var userName = Context.Session.GetString("UserName");
    var userRole = Context.Session.GetString("UserRole");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Jordan Travel</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="~/css/userdashboard.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <div class="profile-section">
            <img src="@(string.IsNullOrEmpty(profilePic)
                ? "https://randomuser.me/api/portraits/men/32.jpg"
                : profilePic)"
                 alt="Profile"
                 class="profile-avatar" />

            <div class="profile-info">
                <div class="profile-name">@userName</div>
                <div class="profile-role">@userRole</div>
            </div>
        </div>

        <div class="sidebar-menu">
            <div class="menu-title">Navigation</div>
            <a asp-action="Dashboard" asp-controller="User" class="menu-item @(ViewData["ActivePage"] as string == "Dashboard" ? "active" : "")">
                <i class="fas fa-tachometer-alt"></i> <span>Dashboard</span>
            </a>

            <div class="menu-title">Navigation</div>
            <a asp-action="Index" asp-controller="Home" class="menu-item @(ViewData["ActivePage"] as string == "Home" ? "active" : "")">
                <i class="fas fa-home"></i> <span>Home</span>
            </a>

            <div class="menu-title">Account</div>
            <a asp-action="Profile" asp-controller="User" class="menu-item @(ViewData["ActivePage"] as string == "Profile" ? "active" : "")">
                <i class="fas fa-user"></i> <span>Profile</span>
            </a>
            <a asp-action="EditProfile" asp-controller="User" class="menu-item @(ViewData["ActivePage"] as string == "EditProfile" ? "active" : "")">
                <i class="fas fa-user-edit"></i> <span>Edit Profile</span>
            </a>
            <a asp-action="BookingHistory" asp-controller="User" class="menu-item @(ViewData["ActivePage"] as string == "Bookings" ? "active" : "")">
                <i class="fas fa-calendar-check"></i> <span>Booking History</span> <span class="badge">3</span>
            </a>
            <a asp-action="Wishlist" asp-controller="User" class="menu-item @(ViewData["ActivePage"] as string == "Wishlist" ? "active" : "")">
                <i class="fas fa-heart"></i> <span>Wishlist</span> <span class="badge">2</span>
            </a>
            
            <a asp-action="Logout" asp-controller="User" class="menu-item">
                <i class="fas fa-sign-out-alt"></i> <span>Logout</span>
            </a>

           
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        @RenderBody()
    </div>

    <script src="~/js/userdashboard.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
